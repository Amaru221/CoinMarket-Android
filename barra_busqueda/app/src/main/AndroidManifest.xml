<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.agd19.barra_busqueda">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity_detalles"
            android:label="@string/title_activity_detalles"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".heroes_zeroes"
            android:label="@string/title_activity_heroes_zeroes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Conversor"
            android:label="@string/title_activity_conversor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_alertas"
            android:label="@string/title_activity_alertas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".info_app"
            android:label="@string/title_activity_info_app"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>